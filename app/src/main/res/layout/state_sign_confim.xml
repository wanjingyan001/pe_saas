<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/state_sign_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_main" />

        <TextView
            style="@style/SoguTextNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="表决意见" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/divider" />

    <RadioGroup
        android:id="@+id/rg_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_item1"
            android:layout_width="69dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_radio_rect_blue"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/text_radio_blue" />

        <RadioButton
            android:id="@+id/rb_item2"
            android:layout_width="69dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_radio_rect_blue"
            android:button="@null"
            android:gravity="center"
            android:text="否决"
            android:textColor="@color/text_radio_blue" />

        <RadioButton
            android:id="@+id/rb_item3"
            android:layout_width="69dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_radio_rect_blue"
            android:button="@null"
            android:gravity="center"
            android:text="弃权"
            android:textColor="@color/text_radio_blue" />
    </RadioGroup>
</LinearLayout>