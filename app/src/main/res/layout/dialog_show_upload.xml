<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:src="@mipmap/ic_upload_cloud"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传文件"
            android:layout_marginLeft="@dimen/text_15"
            style="@style/text16_color28"/>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginStart="@dimen/text_15"
        android:layout_marginEnd="@dimen/text_15"
        app:layout_constraintTop_toBottomOf="@+id/ll_upload"
        android:background="@color/gray_f1"/>

    <LinearLayout
        android:id="@+id/ll_newdir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_15"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:src="@mipmap/ic_new_dir"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建文件夹"
            android:layout_marginLeft="@dimen/text_15"
            style="@style/text16_color28"/>
    </LinearLayout>
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_10"
        app:layout_constraintTop_toBottomOf="@+id/ll_newdir"
        android:background="@color/gray_f7"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/text18_color28"
        android:paddingTop="@dimen/text_18"
        android:paddingBottom="@dimen/text_18"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        android:text="取消"/>
</android.support.constraint.ConstraintLayout>