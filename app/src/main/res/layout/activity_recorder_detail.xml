<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f7"
    android:orientation="vertical">
    <include layout="@layout/normal_toolbar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_record_head"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/text_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"
                android:text="上海华夫科技股份有限公司"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/text_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:text="购买人：李栋梁"/>
                <View
                    android:layout_width="@dimen/text_2"
                    android:layout_height="@dimen/text_10"
                    android:layout_marginLeft="@dimen/text_8"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:text="购买账号：1873664839"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单详情"
        android:layout_marginLeft="@dimen/text_20"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10"
        style="@style/text14_color28"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_15"
        android:background="@color/gray_f1"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginTop="@dimen/text_10"
        android:text="2018-09-16 10:00:00"
        style="@style/text12_color80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_10"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_15"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_pay"
            android:layout_width="@dimen/text_60"
            android:layout_height="@dimen/text_60"
            android:src="@mipmap/ic_credit_head"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/text_10"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.99"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    style="@style/text14_color28"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text14_color28"
                    android:layout_toLeftOf="@id/tv_fee"
                    android:text="关于Tencent的….pdf"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_8">
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    style="@style/text12_color80"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text12_color80"
                    android:layout_toLeftOf="@id/tv_count"
                    android:text="数量"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginTop="@dimen/text_15"
        android:background="@color/gray_f1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_20"
        android:paddingRight="@dimen/text_15"
        android:paddingTop="@dimen/text_15"
        android:paddingBottom="@dimen/text_15">
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥999"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/red_ff7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单总价"
            style="@style/text16_color28"/>
    </RelativeLayout>
</LinearLayout>