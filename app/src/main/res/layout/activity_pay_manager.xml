<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_f7">
    <include
        android:id="@+id/toolbar"
        layout="@layout/white_normal_toolbar"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="付费账号"
        android:background="@color/white"
        android:layout_marginTop="@dimen/text_10"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="@dimen/text_10"
        android:paddingLeft="@dimen/text_15"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        style="@style/text14_color28"/>
    <LinearLayout
        android:id="@+id/ll_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_20"
        android:paddingLeft="@dimen/text_20"
        android:paddingRight="@dimen/text_8"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/text_size_11"
                android:gravity="bottom"
                android:paddingBottom="@dimen/text_8"
                android:layout_alignBottom="@+id/tv_2"
                android:textColor="@color/red_ff7"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="34sp"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/text_2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_1"
                android:textColor="@color/red_ff7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/人/月"
                android:textSize="@dimen/text_size_11"
                android:paddingBottom="@dimen/text_8"
                android:layout_toRightOf="@id/tv_2"
                android:layout_marginLeft="@dimen/text_2"
                android:layout_alignBottom="@+id/tv_2"
                android:gravity="bottom"
                android:textColor="@color/red_ff7"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="舆情监控额度"
                style="@style/text12_color28"/>
            <TextView
                android:id="@+id/tv_yqcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10个"
                android:layout_marginTop="@dimen/text_8"
                style="@style/text12_color28"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="征信额度"
                style="@style/text12_color28"/>
            <TextView
                android:id="@+id/tv_zxcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50个"
                android:layout_marginTop="@dimen/text_8"
                style="@style/text12_color28"/>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_15"
        android:paddingRight="@dimen/text_15"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_pay_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/text_18"
            android:paddingBottom="@dimen/text_18"
            android:textColor="@color/blue_17"
            android:text="已选择账号：0个"/>
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量购买"
            android:textSize="@dimen/text_size_14"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/text_12"
            android:paddingRight="@dimen/text_12"
            android:paddingTop="@dimen/text_8"
            android:gravity="center"
            android:paddingBottom="@dimen/text_8"
            android:background="@drawable/bg_pay"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量删除"
            style="@style/text14_colora0"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_pay"
            android:paddingLeft="@dimen/text_12"
            android:gravity="center"
            android:paddingRight="@dimen/text_12"
            android:paddingTop="@dimen/text_8"
            android:visibility="gone"
            android:layout_marginRight="@dimen/text_20"
            android:paddingBottom="@dimen/text_8"
            android:background="@drawable/bg_delete"/>
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_credit"
        app:layout_constraintBottom_toTopOf="@+id/rl_bottom"
        android:background="@color/gray_f7"
        android:layout_height="0dp">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_f7"
                tools:listitem="@layout/pay_manager_item">
            </android.support.v7.widget.RecyclerView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <FrameLayout
            android:id="@+id/fl_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img_empty"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/view_recover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@color/gray_f1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView android:id="@+id/iv_loading"
                           android:layout_width="54dp"
                           android:layout_height="54dp"
                           android:layout_gravity="center" />
            </LinearLayout>
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>