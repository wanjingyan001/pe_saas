<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/text_10">
    <TextView
        android:id="@+id/tv_time"
        style="@style/mineWalletContent"
        tools:text="2018年7月10日 15:12"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="left"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_coin"
        app:layout_constraintBottom_toBottomOf="@+id/tv_coin"
        android:gravity="center_vertical"
        tools:text="支付宝充值金额"/>

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginEnd="@dimen/text_8"
        android:layout_marginTop="@dimen/text_5"
        tools:text="560"
        android:textSize="22sp"
        android:textColor="@color/red_ff7"
        android:gravity="right"
        app:layout_constraintEnd_toStartOf="@+id/tv_yuan"/>
    <TextView
        android:id="@+id/tv_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/gray_a0"
        android:layout_marginBottom="@dimen/text_5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_coin"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin"
        android:layout_marginTop="@dimen/text_8"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>