<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingLeft="13dp"
    android:paddingRight="14dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/file_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/file_default"
        />

    <TextView
        android:id="@+id/file_name"
        android:layout_toRightOf="@+id/file_img"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:textColor="@color/black"
        android:text="海通创新.apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/file_info"
        android:layout_alignLeft="@+id/file_name"
        android:layout_below="@+id/file_name"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        android:textColor="#808080"
        android:text="123.03KB  张三   2018/1/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/nim_arrow_right"/>

</RelativeLayout>