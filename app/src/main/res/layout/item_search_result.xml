<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.sogukj.pe.widgets.CircleImageView
        android:id="@+id/result_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/nim_avatar_default"
        android:layout_marginLeft="13dp" />

    <TextView
        android:id="@+id/result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/result_avatar"
        android:text="张三"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/result_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/result_name"
        android:layout_below="@+id/result_name"
        android:layout_marginTop="6dp"
        android:textColor="#808080"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/result_name"
        android:layout_marginRight="10dp"
        android:textColor="#808080"
        android:textSize="10sp" />

</RelativeLayout>