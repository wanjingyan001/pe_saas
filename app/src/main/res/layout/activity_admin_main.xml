<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_record"
    tools:context="com.sogukj.pe.module.user.AdminMainActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/addAdministrator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="20dp"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text_1"
        android:gravity="center_vertical"
        android:text="添加管理员"
        android:drawableEnd="@drawable/ic_right"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <TextView
        android:id="@+id/transferAdministrator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="20dp"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text_1"
        android:gravity="center_vertical"
        android:text="转让管理员"
        android:drawableEnd="@drawable/ic_right"
        app:layout_constraintTop_toBottomOf="@id/addAdministrator"/>


</android.support.constraint.ConstraintLayout>
