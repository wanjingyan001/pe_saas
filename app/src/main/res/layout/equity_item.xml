<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/equity_selector"
    android:gravity="center|left"
    android:orientation="horizontal">

    <com.sogukj.pe.widgets.CircleImageView
        android:id="@+id/tuxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016-05-04 股权变更记录"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#ff3a3635"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/state_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff4390f0"
                android:paddingBottom="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:text="修改"
                android:textSize="10sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/state_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/equity_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:text="创建"
                android:textSize="10sp"
                android:textColor="#ff4390f0" />

            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2018年4月14日20:40"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
