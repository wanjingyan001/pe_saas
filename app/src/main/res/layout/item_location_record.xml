<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff7f9fc"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:text="2017-12-02 星期一"
        android:textColor="#ff808080"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/dutyOn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/dutyOnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:text="10:29    定位打卡"
            android:textColor="#ff282828"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dutyOnLocate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dutyOnTime"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="上海静安区江场三路93号401-402搜股上海科技有..."
            android:textColor="#ffa0a4aa"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="0.5"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_r" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divider2" />

    <RelativeLayout
        android:id="@+id/dutyOff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/dutyOffTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:text="10:29    定位打卡"
            android:textColor="#ff282828"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dutyOffLocate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dutyOffTime"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="上海静安区江场三路93号401-402搜股上海科技有..."
            android:textColor="#ffa0a4aa"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="0.5"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_r" />
    </RelativeLayout>

</LinearLayout>
