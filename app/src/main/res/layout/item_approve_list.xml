<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/text_25"
        android:layout_height="@dimen/text_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launch_pe_round"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_25"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black_28"
        android:gravity="center"
        android:layout_marginStart="@dimen/text_10"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="陈建"/>

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_25"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/green_50d"
        android:gravity="center"
        android:layout_marginStart="@dimen/text_10"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="parent"
        android:text="已同意"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_25"
        android:textColor="@color/gray_a0"
        android:textSize="@dimen/text_size_10"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="06.12 18:00"/>

    <TextView
        android:id="@+id/tv_agree_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:text="同意上立项会"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/text_8"
        android:drawableRight="@mipmap/icon_agree_pro"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        android:layout_marginStart="@dimen/text_5"
        android:layout_marginTop="@dimen/text_3"
        android:textColor="@color/black_28"/>

    <View
        android:id="@+id/view_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue_f6f"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/text_3"
        app:layout_constraintTop_toTopOf="@+id/tv_meel_plan"
        app:layout_constraintBottom_toBottomOf="@+id/tv_meel_person"/>
    
    <TextView
        android:id="@+id/tv_meel_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/shape_meel"
        android:drawablePadding="@dimen/text_5"
        android:paddingTop="@dimen/text_8"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/text_15"
        app:layout_constraintTop_toBottomOf="@+id/tv_agree_pro"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        android:text="会议安排"/>

    <TextView
        android:id="@+id/tv_meel_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/black_28"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/text_8"
        app:layout_constraintTop_toBottomOf="@+id/tv_meel_plan"
        app:layout_constraintStart_toStartOf="@+id/tv_meel_plan"
        android:layout_marginStart="@dimen/text_7"
        android:layout_marginTop="@dimen/text_5"
        android:drawableLeft="@mipmap/icon_meel_plan"
        android:text="2018年9月14日 10:30"/>

    <TextView
        android:id="@+id/tv_meel_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/black_28"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/text_8"
        android:paddingBottom="@dimen/text_8"
        app:layout_constraintTop_toBottomOf="@+id/tv_meel_time"
        app:layout_constraintStart_toStartOf="@+id/tv_meel_time"
        android:layout_marginTop="@dimen/text_10"
        android:drawableLeft="@mipmap/icon_meel_plan"/>

    <TextView
        android:id="@+id/tv_meel_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/black_28"
        android:gravity="center_vertical"
        android:layout_marginStart="23dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/text_3"
        android:paddingBottom="@dimen/text_8"
        app:layout_constraintTop_toBottomOf="@+id/tv_meel_time"
        app:layout_constraintStart_toStartOf="@+id/tv_meel_time"
        android:layout_marginTop="@dimen/text_10"
        tools:text="张栋梁、王刚、刘宇、张塞、曹萌/张栋梁、王刚、刘宇、张塞、曹萌张栋梁、王刚、刘宇、张塞、曹萌"/>

    <View
        android:id="@+id/view_space"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/tv_meel_person"/>
    <View
        android:id="@+id/view_line2"
        android:layout_width="@dimen/text_2"
        android:layout_height="0dp"
        android:background="@color/gray_f1"
        android:layout_marginStart="@dimen/text_12"
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        app:layout_constraintStart_toStartOf="@+id/iv_image"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View android:id="@+id/view_line1"
        android:layout_width="@dimen/text_2"
        android:layout_height="25dp"
        android:background="@color/gray_f1"
        android:layout_marginStart="@dimen/text_12"
          android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        app:layout_constraintStart_toStartOf="@+id/iv_image"/>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/text_5"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view_space"
        android:layout_marginLeft="@dimen/text_3">
        <RelativeLayout
            android:id="@+id/rl_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/blue_3c"
                android:paddingLeft="@dimen/text_5"
                android:paddingRight="@dimen/text_5"
                android:paddingTop="@dimen/text_1"
                android:paddingBottom="@dimen/text_1"
                android:background="@drawable/bg_blue3c"/>
            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:maxLines="3"
                tools:text="              通过审批，注意事项注意投资风险，投资意见比对。
                通过审批，注意事项注意投资风险，投资意见比对。"
                android:ellipsize="end"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/blue_3c"
            android:paddingLeft="@dimen/text_5"
            android:paddingRight="@dimen/text_5"
            android:paddingTop="@dimen/text_1"
            android:paddingBottom="@dimen/text_1"
            android:background="@drawable/bg_blue3c"/>
        <LinearLayout
            android:id="@+id/ll_files"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/text_5"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_assign_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="@dimen/text_8"
            android:paddingBottom="@dimen/text_8"
            android:clickable="true"
            android:background="@drawable/bg_agree"
            android:layout_marginTop="@dimen/text_8">
            <TextView
                android:id="@+id/tv_assign_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/text_8"
                android:drawableLeft="@mipmap/icon_assign"
                android:text="分配审批"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_assign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_10"
            android:visibility="gone"
            android:background="@color/blue_f6f"
            android:layout_marginTop="@dimen/text_8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_meel"
                android:drawablePadding="@dimen/text_5"
                android:gravity="center_vertical"
                android:text="分配审批人"/>
            <TextView
                android:id="@+id/tv_assign_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/black_28"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/text_8"
                android:layout_marginTop="@dimen/text_10"
                android:drawableLeft="@mipmap/icon_meel_plan"
                android:text="张栋梁、王刚、刘宇、张塞、曹萌"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>