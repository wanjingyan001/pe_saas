<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f7"
              android:orientation="vertical"
              tools:context="com.sogukj.pe.module.user.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/AppTheme.AppBarOverlay">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/back_chevron" />

        <TextView
            android:id="@id/toolbar_title"
            style="@style/SoguTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black_28"
            tools:text="关于X-PE" />

    </android.support.v7.widget.Toolbar>
    
    <ImageView
        android:layout_width="@dimen/text_70"
        android:layout_height="@dimen/text_70"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/text_40"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_pe"/>
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_80"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="@dimen/text_8"
        android:layout_gravity="center_horizontal"
        tools:text="搜股X-PE 2.3.0"/>
    <include layout="@layout/about_content"/>
</LinearLayout>
