<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_sentiment_pay"
    android:layout_marginLeft="@dimen/text_30"
    android:layout_marginRight="@dimen/text_30">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/text_15"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/text16_color28"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/text_15"
                    android:text="智能文书"/>
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="@dimen/text_10"
                    android:layout_marginRight="@dimen/text_5"
                    android:src="@mipmap/ic_pay_close"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title1"
                    android:layout_marginTop="@dimen/text_15"
                    android:layout_marginLeft="@dimen/text_15"
                    android:layout_marginRight="@dimen/text_15"
                    android:background="@color/gray_f1"/>

                <LinearLayout
                    android:id="@+id/ll_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_15"
                    android:layout_marginRight="@dimen/text_15"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/text_3"
                        android:paddingBottom="@dimen/text_8"
                        android:text="订单详情"
                        style="@style/text12_color28"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_1"
                        android:background="@color/gray_f1"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/gray_80"
                        android:layout_marginTop="@dimen/text_5"
                        android:text="2018-09-16 10:00:00"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_10"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_pay"
                            android:layout_width="@dimen/text_60"
                            android:layout_height="@dimen/text_60"
                            android:src="@mipmap/ic_book_head"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_10"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_fee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥0.99"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    style="@style/text14_color28"/>

                                    <TextView
                                        android:id="@+id/tv_name"
                                        android:layout_toLeftOf="@id/tv_fee"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/text14_color28"
                                        android:text="关于Tencent的招股书dwaawdawdawdwadwaaw"
                                        android:maxLines="1"
                                        android:ellipsize="end"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_8">
                                <TextView
                                    android:id="@+id/tv_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="X1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    style="@style/text12_color80"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/text12_color80"
                                    android:layout_toLeftOf="@id/tv_count"
                                    android:text="数量"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_1"
                        android:layout_marginTop="@dimen/text_15"
                        android:background="@color/gray_f1"/>
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
            <include layout="@layout/pay_content_dialog"/>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
