<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_project_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_18"
        android:background="@color/white"
        android:paddingLeft="19dp"
        android:paddingRight="@dimen/text_5"
        android:paddingBottom="@dimen/text_18">
        <TextView
            android:id="@+id/tv_time_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_28"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="年份"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:textColor="@color/black_28"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_14"
            android:gravity="right|center_vertical"
            android:drawablePadding="@dimen/text_8"
            android:layout_toRightOf="@id/tv_time_tag"
            android:drawableRight="@drawable/ic_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        android:layout_marginLeft="@dimen/text_19"
        android:layout_marginRight="@dimen/text_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="19dp"
        android:paddingRight="@dimen/text_8">
        <TextView
            android:id="@+id/tv_property_tag"
            style="@style/addContactTitle"
            android:text="净资产(万元)"/>
        <EditText
            android:id="@+id/et_property_name"
            style="@style/addContactContent"
            android:inputType="number"
            android:layout_toRightOf="@id/tv_property_tag"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        android:layout_marginLeft="@dimen/text_19"
        android:layout_marginRight="@dimen/text_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="19dp"
        android:paddingRight="@dimen/text_8">
        <TextView
            android:id="@+id/tv_income_tag"
            style="@style/addContactTitle"
            android:text="收入(万元)"/>
        <EditText
            android:id="@+id/et_income_name"
            style="@style/addContactContent"
            android:inputType="number"
            android:layout_toRightOf="@id/tv_income_tag"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        android:layout_marginLeft="@dimen/text_19"
        android:layout_marginRight="@dimen/text_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="19dp"
        android:paddingRight="@dimen/text_8">
        <TextView
            android:id="@+id/tv_profit_tag"
            style="@style/addContactTitle"
            android:text="净利润(万元)"/>
        <EditText
            android:id="@+id/et_profit_name"
            style="@style/addContactContent"
            android:inputType="number"
            android:layout_toRightOf="@id/tv_cn_tag"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        android:layout_marginLeft="@dimen/text_19"
        android:layout_marginRight="@dimen/text_10"/>
</LinearLayout>