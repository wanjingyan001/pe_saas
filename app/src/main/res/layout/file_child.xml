<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sogukj.pe.baselibrary.widgets.ListViewCompat
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/divider"
        android:dividerHeight="1px"
        android:listSelector="@drawable/bg_item_list"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />


    <TextView
        android:id="@+id/tv_more1"
        style="@style/SoguTextNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_list"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingTop="12dp"
        android:text="查看更多"
        android:textColor="@color/text_more"
        android:textSize="15sp"
        android:visibility="gone" />

</LinearLayout>
