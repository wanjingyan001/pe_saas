<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sogukj.pe.ui.score.ScoreListActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/bg_score_red">

        <include layout="@layout/toolbar" />

        <!--第一名-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="125dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp">

                <com.sogukj.pe.widgets.CircleImageView
                    android:id="@+id/head_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rect_orange"
                    app:civ_border_color="#4DFFFFFF"
                    app:civ_border_width="4dp" />

                <com.sogukj.pe.widgets.CircleImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/n1" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dengji_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/oval2_y"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#FFFFFFFF"
                    android:textSize="8sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/final_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#FFFFA69D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finishing_task_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFEA796E"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/kpi_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFEA796E"
                android:textSize="8sp" />

        </LinearLayout>

        <!--第二名-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.sogukj.pe.widgets.CircleImageView
                    android:id="@+id/head_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rect_orange"
                    app:civ_border_color="#4DFFFFFF"
                    app:civ_border_width="4dp" />

                <com.sogukj.pe.widgets.CircleImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/n2" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dengji_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/oval2_y"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#FFFFFFFF"
                    android:textSize="8sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/final_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#FFFFA69D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/finishing_task_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFEA796E"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/kpi_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFEA796E"
                android:textSize="6sp" />

        </LinearLayout>

        <!--第三名-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.sogukj.pe.widgets.CircleImageView
                    android:id="@+id/head_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rect_orange"
                    app:civ_border_color="#4DFFFFFF"
                    app:civ_border_width="4dp" />

                <com.sogukj.pe.widgets.CircleImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/n3" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dengji_3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/oval2_y"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#FFFFFFFF"
                    android:textSize="8sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/final_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#FFFFA69D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/finishing_task_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFEA796E"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/kpi_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFEA796E"
                android:textSize="6sp" />

        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/score_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
