<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/text_15"
    android:paddingRight="@dimen/text_15"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10">
        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_sort_time"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间排序"
            android:layout_marginLeft="@dimen/text_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_time"
            style="@style/text16_color28"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"/>
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10">
        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_sort_name"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称排序"
            style="@style/text16_color28"
            android:textColor="@color/blue_3c"
            android:layout_marginLeft="@dimen/text_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_name"/>
    </RelativeLayout>
</LinearLayout>