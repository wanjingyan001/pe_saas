<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/text_30"
    android:layout_marginRight="@dimen/text_30"
    android:paddingBottom="@dimen/text_10"
    android:background="@drawable/bg_sentiment_pay"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/text16_color28"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/text_15"
        android:text="征信已达上限"/>

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title1"
        android:gravity="center"
        style="@style/text16_color28"
        android:text="请购买征信套餐"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/text_10"
        android:layout_marginRight="@dimen/text_5"
        android:src="@mipmap/ic_pay_close"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2"
        android:layout_marginTop="@dimen/text_15"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_15"
        android:background="@color/gray_f1"/>

    <LinearLayout
        android:id="@+id/ll_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_15"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_15"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_combo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_credit"
                android:paddingLeft="@dimen/text_8"
                android:paddingTop="@dimen/text_10"
                android:paddingBottom="@dimen/text_10"
                android:paddingRight="@dimen/text_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_12"
                    android:text="100个"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_16"
                    android:text="￥999"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_combo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_credit_normal"
                android:paddingLeft="@dimen/text_8"
                android:paddingTop="@dimen/text_10"
                android:paddingBottom="@dimen/text_10"
                android:layout_marginLeft="@dimen/text_10"
                android:paddingRight="@dimen/text_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_12"
                    android:text="1000个"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_16"
                    android:text="￥8800"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_15"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_combo3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_credit_normal"
                android:paddingLeft="@dimen/text_8"
                android:paddingTop="@dimen/text_10"
                android:paddingBottom="@dimen/text_10"
                android:paddingRight="@dimen/text_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_12"
                    android:text="7000个"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_16"
                    android:text="￥48000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_combo4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_credit_normal"
                android:paddingLeft="@dimen/text_8"
                android:paddingTop="@dimen/text_10"
                android:paddingBottom="@dimen/text_10"
                android:layout_marginLeft="@dimen/text_10"
                android:paddingRight="@dimen/text_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_12"
                    android:text="15000个"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_f85"
                    android:textSize="@dimen/text_size_16"
                    android:text="￥98000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_15"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_15"
        android:background="@drawable/bg_credit"
        android:paddingTop="@dimen/text_20"
        android:paddingBottom="@dimen/text_20"
        android:paddingLeft="@dimen/text_8"
        android:paddingRight="@dimen/text_8"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/view1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/text_size_11"
                android:gravity="bottom"
                android:paddingBottom="@dimen/text_8"
                android:layout_alignBottom="@+id/tv_2"
                android:textColor="@color/red_ff7"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="34sp"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/text_2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_1"
                android:textColor="@color/red_ff7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/人/月"
                android:textSize="@dimen/text_size_11"
                android:paddingBottom="@dimen/text_8"
                android:layout_toRightOf="@id/tv_2"
                android:layout_marginLeft="@dimen/text_2"
                android:layout_alignBottom="@+id/tv_2"
                android:gravity="bottom"
                android:textColor="@color/red_ff7"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="舆情监控额度"
                style="@style/text12_color28"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10个"
                android:layout_marginTop="@dimen/text_8"
                style="@style/text12_color28"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="征信额度"
                style="@style/text12_color28"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50个"
                android:layout_marginTop="@dimen/text_8"
                style="@style/text12_color28"/>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/pay_dialog_content"/>
</android.support.constraint.ConstraintLayout>