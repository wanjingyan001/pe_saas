<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_record"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.sogukj.pe.module.register.CreateDepartmentActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/commom_blue_title"/>

    <LinearLayout
        android:id="@+id/departHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.sogukj.pe.widgets.CircleImageView
            android:id="@+id/companyLogo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/icon_default_company_logo"/>

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_1"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_15"
        android:paddingRight="@dimen/text_15"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10"
        android:visibility="gone"
        android:background="@drawable/bg_depart_bottom"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/text_25"
            android:paddingRight="@dimen/text_25"
            android:paddingTop="@dimen/text_8"
            android:layout_marginLeft="@dimen/text_25"
            android:paddingBottom="@dimen/text_8"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_depart_delete"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:layout_centerVertical="true"
            android:textColor="@color/blue_17"
            android:text="已选择：0个"/>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/text_20"
            android:layout_height="@dimen/text_20"
            android:layout_marginStart="@dimen/text_10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_delete"
            android:background="@drawable/team_select_bg"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_marginRight="@dimen/text_5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_select"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/blue_17"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/text_15"
        android:layout_below="@id/departHeader"
        android:layout_above="@id/rl_bottom"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/layout_department_header"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/departmentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/text_10"
                tools:listitem="@layout/item_department1">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>
