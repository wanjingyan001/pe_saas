<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:paddingTop="20dp"
        android:background="@drawable/project_bg">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="">

            <LinearLayout
                android:id="@+id/down"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="56dp"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0">

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/project_icon"
                    android:padding="3dp"
                    android:src="@drawable/default_icon" />

                <TextView
                    android:id="@+id/companyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:letterSpacing="0.04"
                    android:lineSpacingExtra="0sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="搜股创新乐知信息科技有限公司"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/proj_stage"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rectangle_tag"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="0sp"
                        android:text="储 备"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="@color/transparent"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/toolbar_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/sogu_ic_back" />

                <TextView
                    android:id="@id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxEms="5"
                    android:textSize="17sp"
                    android:textColor="@color/textColorPrimary"
                    android:ellipsize="end"
                    android:layout_marginLeft="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/lt" />

                    <ImageView
                        android:id="@+id/history"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/ls" />

                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/delete_all" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <FrameLayout
                    android:id="@+id/divide2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_manager_pingjia">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SoguTextSamll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="是否具有商业价值" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_yes"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:background="@drawable/bg_rectangle_blue"
                                android:gravity="center"
                                android:text="是"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btn_no"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/bg_rectangle_white"
                                android:gravity="center"
                                android:text="否"
                                android:textColor="@color/text_1"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SoguTextSamll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="创始人是否靠谱" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_you"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:background="@drawable/bg_rectangle_blue"
                                android:gravity="center"
                                android:text="是"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btn_wu"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/bg_rectangle_white"
                                android:gravity="center"
                                android:text="否"
                                android:textColor="@color/text_1"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/qingbao_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/qingbaojiankong" />

                <LinearLayout
                    android:id="@+id/neg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="负面讯息"
                        android:textColor="#ff282828"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/neg_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/neg_yq_bg"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:visibility="invisible"
                        android:text="201条"
                        android:textColor="#ffff5858"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/yuqing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="企业舆情"
                        android:textColor="#ff282828"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/yq_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/neg_yq_bg"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="201条"
                        android:visibility="invisible"
                        android:textColor="#ffff5858"
                        android:textSize="10sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.3"
                    android:background="@drawable/ic_arrow_r" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_loading"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
