<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@id/star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@+id/moneyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/moneyTitle" />


    <TextView
        android:id="@+id/moneyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="24dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="金额"
        android:textColor="@color/text_1"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/moneyEdt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:gravity="end|center_vertical"
        android:hint="请输入"
        android:inputType="number|numberDecimal"
        android:singleLine="true"
        android:textColor="@color/text_1"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/moneyTitle"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/moneyCapitalTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_record"
        android:paddingBottom="6dp"
        android:paddingEnd="16dp"
        android:paddingStart="24dp"
        android:paddingTop="6dp"
        android:text="大写:"
        android:textColor="@color/text_3"
        android:textSize="@dimen/text_size_samll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyEdt" />
</android.support.constraint.ConstraintLayout>