<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/msg_border1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:gravity="left|center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingExtra="2sp"
                android:singleLine="true"
                android:text="系统消息助手"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_tag_num"
                android:gravity="center"
                android:minWidth="15dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="9+" />

            <TextView
                android:id="@+id/sequense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/seq_bg"
                android:lineSpacingExtra="0sp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:layout_gravity="center"
                android:text="YYXZ029384756 "
                android:textColor="@color/white"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="系统消息助手"
                android:textColor="#ffcbe3ff"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="系统消息助手"
                android:textColor="#ffcbe3ff"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="系统消息助手"
            android:textColor="#ffcbe3ff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="更多消息 》"
            android:textColor="#ffcbe3ff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="21dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/state_bg"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="审批中"
            android:textColor="#ff4a90e2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_urgent"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_tag_urgent"
            android:drawableLeft="@drawable/ic_urgent"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:textSize="8sp"
            tools:text="07/07 12:00" />
    </LinearLayout>
</FrameLayout>
