<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_file"
            android:layout_width="@dimen/text_50"
            android:layout_height="@dimen/text_50"
            android:layout_centerVertical="true"
            android:src="@drawable/pdf"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_file"
            android:layout_marginLeft="@dimen/text_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text14_color28"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="投资文件.pdf"/>

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text12_color28"
                android:layout_marginTop="@dimen/text_5"
                tools:text="2.1MB"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/rl_file"
        android:layout_marginTop="@dimen/text_10"
        android:layout_marginStart="@dimen/text_60"
        android:background="@color/gray_d8"/>
</android.support.constraint.ConstraintLayout>