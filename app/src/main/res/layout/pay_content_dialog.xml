<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text14_color28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额：" />

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥9.9"
            android:textColor="@color/red_ff7"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_tip"
            style="@style/text14_color80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（支付后可开发票）" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_10"
        android:layout_marginTop="@dimen/text_10"
        android:background="@color/gray_f7" />

    <RelativeLayout
        android:id="@+id/rl_zfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10">

        <ImageView
            android:id="@+id/iv_zfb_select"
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_unselect_receipt" />

        <ImageView
            android:id="@+id/iv_zfb"
            android:layout_width="@dimen/text_35"
            android:layout_height="@dimen/text_35"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_recharge_zfb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_toLeftOf="@+id/iv_zfb_select"
            android:layout_toRightOf="@+id/iv_zfb"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/text14_color28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付(推荐使用)" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:background="@color/gray_f1" />

    <RelativeLayout
        android:id="@+id/rl_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10">

        <ImageView
            android:id="@+id/iv_wx_select"
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_select_receipt" />

        <ImageView
            android:id="@+id/iv_wx"
            android:layout_width="@dimen/text_35"
            android:layout_height="@dimen/text_35"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_recharge_wx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_toLeftOf="@+id/iv_wx_select"
            android:layout_toRightOf="@+id/iv_wx"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/text14_color28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:background="@color/gray_f1" />

    <RelativeLayout
        android:id="@+id/rl_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10">

        <ImageView
            android:id="@+id/iv_bus_select"
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_select_receipt" />

        <ImageView
            android:id="@+id/iv_bus"
            android:layout_width="@dimen/text_35"
            android:layout_height="@dimen/text_35"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_recharge_bus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_toLeftOf="@+id/iv_bus_select"
            android:layout_toRightOf="@+id/iv_bus"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bus_title"
                style="@style/text14_color28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业账户支付" />

            <TextView
                android:id="@+id/tv_bus_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额：20.00"
                android:textColor="@color/gray_80"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:background="@color/gray_f1" />

    <RelativeLayout
        android:id="@+id/rl_pre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10">

        <ImageView
            android:id="@+id/iv_pre_select"
            android:layout_width="@dimen/text_25"
            android:layout_height="@dimen/text_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_gray_receipt" />

        <ImageView
            android:id="@+id/iv_pre"
            android:layout_width="@dimen/text_35"
            android:layout_height="@dimen/text_35"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_recharge_per" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_toLeftOf="@+id/iv_pre_select"
            android:layout_toRightOf="@+id/iv_pre"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_per_title"
                style="@style/text14_colora0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人账户支付" />

            <TextView
                android:id="@+id/tv_per_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额：0.00"
                android:textColor="@color/gray_a0"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="@dimen/text_10"
        android:background="@color/gray_f1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_15"
        android:background="@color/gray_f7" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginTop="@dimen/text_10"
        android:layout_marginRight="@dimen/text_15"
        android:background="@color/blue_3c"
        android:gravity="center"
        android:paddingTop="@dimen/text_15"
        android:paddingBottom="@dimen/text_15"
        android:text="去支付"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>