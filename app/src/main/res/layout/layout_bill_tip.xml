<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/text14_color80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f7"
        android:paddingBottom="@dimen/text_10"
        android:paddingStart="@dimen/text_15"
        android:paddingTop="@dimen/text_10"
        android:text="发票信息"/>

        <LinearLayout
            android:id="@+id/ll_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/text_20">

                <TextView
                    style="@style/text14_colora0_all"
                    android:layout_weight="1.2"
                    android:text="发票抬头"/>

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="4"
                    android:layout_marginRight="@dimen/text_8"
                    tools:text="北京福富软件技术股份技术股份技术股份有限公司分公司"
                    android:textColor="@color/black_28"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_1"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginRight="@dimen/text_20"
                android:background="@color/gray_f1"/>
            <LinearLayout
                android:id="@+id/ll_duty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/text_20">

                <TextView
                    style="@style/text14_colora0_all"
                    android:layout_weight="1.2"
                    android:text="税号"/>

                <TextView
                    android:id="@+id/tv_duty"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="4"
                    android:layout_marginRight="@dimen/text_8"
                    tools:text="9123 0012 7361 8386 2C"
                    android:textColor="@color/black_28"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
            <View
                android:id="@+id/view_duty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_1"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginRight="@dimen/text_20"
                android:background="@color/gray_f1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/text_20">

                <TextView
                    style="@style/text14_colora0_all"
                    android:layout_weight="1.2"
                    android:text="发票内容"/>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="4"
                    android:layout_marginRight="@dimen/text_8"
                    tools:text="运输客运服务费"
                    android:textColor="@color/black_28"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_1"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginRight="@dimen/text_20"
                android:background="@color/gray_f1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/text_20">

                <TextView
                    style="@style/text14_colora0_all"
                    android:layout_weight="1.2"
                    android:text="发票金额"/>

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="4"
                    android:layout_marginRight="@dimen/text_8"
                    tools:text="5680.12元"
                    android:textColor="@color/black_28"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_1"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginRight="@dimen/text_20"
                android:background="@color/gray_f1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/text_20">

                <TextView
                    style="@style/text14_colora0_all"
                    android:layout_weight="1.2"
                    android:text="申请时间"/>

                <TextView
                    android:id="@+id/tv_accept_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="4"
                    android:layout_marginRight="@dimen/text_8"
                    tools:text="2018年7月10日 15:12"
                    android:textColor="@color/black_28"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_1"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginRight="@dimen/text_20"
                android:background="@color/gray_f1"/>
        </LinearLayout>

</LinearLayout>