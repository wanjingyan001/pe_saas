<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_invest_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_18"
        android:background="@color/white"
        android:paddingLeft="@dimen/text_20"
        android:paddingRight="@dimen/text_5"
        android:paddingBottom="@dimen/text_18">
        <TextView
            android:id="@+id/tv_invest_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_28"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="投资主体"/>
        <TextView
            android:id="@+id/tv_invest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:textColor="@color/black_28"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_14"
            android:gravity="right|center_vertical"
            android:drawablePadding="@dimen/text_8"
            android:layout_toRightOf="@id/tv_invest_tag"
            android:drawableRight="@drawable/ic_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/text_20"
        android:paddingRight="@dimen/text_8">
        <TextView
            android:id="@+id/tv_invest_amount"
            style="@style/addContactTitle"
            android:text="投资金额(万元)"/>
        <EditText
            android:id="@+id/et_amount_name"
            style="@style/addContactContent"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@id/tv_invest_amount"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/text_20"
        android:paddingRight="@dimen/text_8">
        <TextView
            android:id="@+id/tv_stock_tag"
            style="@style/addContactTitle"
            android:text="股权比例(%)"/>
        <EditText
            android:id="@+id/et_stock_ratio"
            style="@style/addContactContent"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@id/tv_stock_tag"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/gray_f1"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_10"/>

</LinearLayout>