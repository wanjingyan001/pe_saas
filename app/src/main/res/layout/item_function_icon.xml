<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/funIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_cbxx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addAndRemove"
        android:layout_width="@dimen/text_15"
        android:layout_height="@dimen/text_15"
        android:visibility="gone"
        android:src="@mipmap/icon_remove_function"
        app:layout_constraintEnd_toEndOf="@+id/funIcon"
        app:layout_constraintTop_toTopOf="@+id/funIcon" />

    <TextView
        android:id="@+id/pointCount"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_red_circle"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:text="12"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/funIcon"
        app:layout_constraintTop_toTopOf="@+id/funIcon" />

    <TextView
        android:id="@+id/functionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="储备信息"
        android:textColor="@color/text_1"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funIcon" />


</android.support.constraint.ConstraintLayout>