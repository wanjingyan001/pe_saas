<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_item_list"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:gravity="center_vertical"
              android:paddingTop="10dp">
    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/text_25"
        android:layout_height="@dimen/text_25"
        android:visibility="gone"
        android:background="@drawable/team_select_bg"/>
    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_pdf" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="关于投资宏大信息科技公司的….pdf"
            android:textColor="@color/text_1"
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="12MB"
                android:visibility="gone"
                android:textColor="@color/text_3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="2017/07/06 今天 13:09 "
                android:textColor="@color/text_3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="姓名"
                android:visibility="gone"
                android:textColor="@color/text_3"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_filter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_10"
        android:paddingRight="@dimen/text_5"
        android:src="@mipmap/ic_fileitem_menu"/>
</LinearLayout>