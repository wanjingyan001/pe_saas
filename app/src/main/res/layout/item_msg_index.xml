<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@drawable/bg_item_list"
    android:orientation="horizontal">

    <com.sogukj.pe.widgets.CircleImageView
        android:id="@+id/msg_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:src="@drawable/ic_msg_alert" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/msg_icon"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="系统消息助手"
                    android:textColor="@color/text_1"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/tv_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全员"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_flag_bg"
                    android:paddingLeft="@dimen/text_3"
                    android:paddingRight="@dimen/text_3"
                    android:paddingTop="@dimen/text_1"
                    android:paddingBottom="@dimen/text_1"
                    android:textSize="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_5"
                    android:textColor="@color/orange_f5"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:textColor="@color/text_3"
                android:textSize="12sp"
                tools:text="07/07 12:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/tv_title_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLength="15"
                android:singleLine="true"
                android:text="暂无数据"
                android:textColor="@color/text_3"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:background="@drawable/bg_tag_num"
                android:gravity="center"
                android:minWidth="15dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="9+" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/content_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/divider2" />

    <ImageView
        android:id="@+id/topTag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_triangle_tag"
        android:visibility="gone"/>

</RelativeLayout>