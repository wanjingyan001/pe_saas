<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/approve_blue1"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/approve_blue1"
        app:tabTextColor="@color/approve_blue1">

    </android.support.design.widget.TabLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp">

        <EditText
            android:id="@+id/search_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/team_bg_search2"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_1" />

        <TextView
            android:id="@+id/search_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ss_small"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/gray7"
            android:textSize="14sp" />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/documentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
