<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zhengxin_bg_3"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center|left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/directorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="2sp"
                android:text="刘宇"
                android:textColor="@color/text_1"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/directorPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_director_position"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="股东"
                android:textColor="@color/text_3"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/phoneNumberTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="18851656871"
                android:textColor="@color/shareholder_text_gray"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/IDCardTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/id_card"
            android:drawablePadding="12dp"
            android:gravity="center|left"
            android:text="12131312312342544676"
            android:textColor="@color/text_1"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/companyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/zhengxin_company"
            android:drawablePadding="12dp"
            android:gravity="center|left"
            android:text="上海搜股科技股份有限联合科技文化传媒科技股份有限联合"
            android:textColor="@color/shareholder_text_gray"
            android:textSize="@dimen/text_size_samll" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/inquireStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/zhengxin_fail" />

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="99+"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/success"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:src="@drawable/zhengxin_chaxunzhong" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:padding="18dp"
            android:src="@drawable/zhengxin_edit" />

    </FrameLayout>

</LinearLayout>