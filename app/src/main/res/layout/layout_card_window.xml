<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/businessCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="6dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_business_card"
            android:padding="20dp">

            <com.sogukj.pe.widgets.CircleImageView
                android:id="@+id/headerImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_default_head" />

            <TextView
                android:id="@+id/cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="张三"
                android:textColor="@color/text_1"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/cardName"
                android:layout_marginTop="8dp"
                android:text="高级投资副总裁"
                android:textColor="@color/text_3"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/cardCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/cardPosition"
                android:layout_marginTop="18dp"
                android:text="上海诗襄信息科技公司"
                android:textColor="@color/text_1"
                android:textSize="@dimen/text_size_samll" />

            <TextView
                android:id="@+id/cardPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/cardCompanyName"
                android:layout_marginTop="12dp"
                android:text="18817392293"
                android:textColor="@color/shareholder_text_gray"
                android:textSize="@dimen/text_size_samll" />

            <TextView
                android:id="@+id/cardEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/cardPhone"
                android:layout_marginTop="8dp"
                android:text="zhang_san@haitong.com"
                android:textColor="@color/shareholder_text_gray"
                android:textSize="@dimen/text_size_samll" />

            <TextView
                android:id="@+id/cardAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/cardEmail"
                android:layout_marginTop="8dp"
                android:text="上海浦东新区长泰广场c座803室内"
                android:textColor="@color/shareholder_text_gray"
                android:textSize="@dimen/text_size_samll" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/businessCard"
        android:layout_alignStart="@+id/businessCard"
        android:layout_below="@+id/businessCard"
        android:layout_marginStart="5dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shareCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/icon_card_share" />

        <ImageView
            android:id="@+id/downloadCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/icon_card_download" />


    </LinearLayout>


</RelativeLayout>