<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/text_15">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_pdf"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="关于投资宏大信息科技公司的….pdf"
                android:textColor="@color/text_1"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="12MB"
                    android:textColor="@color/text_3"
                    android:textSize="12sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="姓名"
                    android:textColor="@color/text_3"
                    android:textSize="12sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="2017/07/06 今天 13:09 "
                    android:textColor="@color/text_3"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginEnd="@dimen/text_15"
        android:layout_marginStart="@dimen/text_15"
        android:background="@color/gray_f1"
        app:layout_constraintTop_toBottomOf="@+id/ll_upload"/>

    <TextView
        android:id="@+id/tv_forward"
        style="@style/text16_color28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_15"
        android:text="转发副本"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/view_line"/>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginEnd="@dimen/text_15"
        android:layout_marginStart="@dimen/text_15"
        android:visibility="gone"
        android:background="@color/gray_f1"
        app:layout_constraintTop_toBottomOf="@+id/tv_forward"/>

    <TextView
        android:id="@+id/tv_copy"
        style="@style/text16_color28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_15"
        android:text="复制到"
        app:layout_constraintTop_toBottomOf="@+id/view_line1"/>

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginEnd="@dimen/text_15"
        android:layout_marginStart="@dimen/text_15"
        android:background="@color/gray_f1"
        app:layout_constraintTop_toBottomOf="@+id/tv_copy"/>

    <TextView
        android:id="@+id/tv_rename"
        style="@style/text16_color28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_15"
        android:text="重命名"
        app:layout_constraintTop_toBottomOf="@+id/view_line2"/>

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginEnd="@dimen/text_15"
        android:layout_marginStart="@dimen/text_15"
        android:background="@color/gray_f1"
        app:layout_constraintTop_toBottomOf="@+id/tv_rename"/>

    <TextView
        android:id="@+id/tv_remove"
        style="@style/text16_color28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_15"
        android:text="移动到"
        app:layout_constraintTop_toBottomOf="@+id/view_line3"/>

    <View
        android:id="@+id/view_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_marginEnd="@dimen/text_15"
        android:layout_marginStart="@dimen/text_15"
        android:background="@color/gray_f1"
        app:layout_constraintTop_toBottomOf="@+id/tv_remove"/>

    <TextView
        android:id="@+id/tv_delete"
        style="@style/text16_color28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_15"
        android:text="删除"
        app:layout_constraintTop_toBottomOf="@+id/view_line4"/>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_10"
        android:background="@color/gray_f7"
        app:layout_constraintTop_toBottomOf="@+id/tv_delete"/>

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/text18_color28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/text_18"
        android:paddingTop="@dimen/text_18"
        android:text="取消"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"/>
</android.support.constraint.ConstraintLayout>