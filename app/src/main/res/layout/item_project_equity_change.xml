<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/divider2"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_time"
        style="@style/SoguTextNormal"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_tag_left"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="--"
        android:textColor="@color/text_2"
        tools:text="2016-08-09" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/divider_bottom"
        android:paddingLeft="10dp">

        <View
            android:id="@+id/tag"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_time_line_m" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="变更后A股总股本" />

                <TextView
                    android:id="@+id/tv_total"
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--"
                    android:textColor="@color/text_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_bottom"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="变更后流通A股" />

                <TextView
                    android:id="@+id/tv_circulate"
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--"
                    android:textColor="@color/text_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_bottom"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="变更后限售A股" />

                <TextView
                    android:id="@+id/tv_limit_sales"
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--"
                    android:textColor="@color/text_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_bottom"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="变动原因" />

                <TextView
                    android:id="@+id/tv_reason"
                    style="@style/SoguTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--"
                    android:textColor="@color/text_2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>