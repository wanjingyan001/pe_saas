<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/text_15"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="@dimen/text_25"
        android:layout_height="@dimen/text_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_depart_delete"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="确定要删除吗？"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black_28"
        android:gravity="center"
        android:layout_marginTop="@dimen/text_10"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="此操作将删除所有子部门，要删除"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/red_ff3"
        android:layout_marginTop="@dimen/text_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <TextView
        android:id="@+id/tv_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="子部门请前往对应页面"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/red_ff3"
        android:layout_marginTop="@dimen/text_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_content1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content2"
        android:layout_marginTop="@dimen/text_25"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black_28"
            android:gravity="center"
            android:layout_marginRight="@dimen/text_15"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:background="@drawable/shape_cancel"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_comfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:background="@drawable/shape_comfirm"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>