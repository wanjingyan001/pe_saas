<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_15"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="@dimen/text_30"
        android:layout_height="@dimen/text_30"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launch_pe_round"/>
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="张元"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/iv_user"
        app:layout_constraintStart_toEndOf="@+id/iv_user"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/text_15"
        style="@style/text14_color28"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="在“宏大科技投资项目组”添加了1个文件"
        app:layout_constraintTop_toTopOf="@+id/tv_user"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user"
        app:layout_constraintStart_toEndOf="@+id/tv_user"
        style="@style/text14_color28"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="今天 14:34"
        app:layout_constraintTop_toBottomOf="@+id/tv_user"
        app:layout_constraintStart_toStartOf="@+id/tv_user"
        android:layout_marginTop="@dimen/text_2"
        style="@style/text12_colora0"/>
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="145dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/text_15"
        android:visibility="gone"
        android:src="@mipmap/banner_ht"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
    <LinearLayout
        android:id="@+id/ll_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/text_15"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_file_dynamic"
        android:paddingLeft="@dimen/text_15"
        android:paddingRight="@dimen/text_15"
        android:paddingTop="@dimen/text_10"
        android:paddingBottom="@dimen/text_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_time">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_file"
                android:layout_width="@dimen/text_50"
                android:layout_height="@dimen/text_50"
                android:layout_centerVertical="true"
                android:src="@drawable/pdf"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_file"
                android:layout_marginLeft="@dimen/text_10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text14_color28"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="投资文件.pdf"/>

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text12_color28"
                    android:layout_marginTop="@dimen/text_5"
                    tools:text="2.1MB"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>