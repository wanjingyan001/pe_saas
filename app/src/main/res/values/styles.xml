    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorHint">@color/text_3</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <style name="ShareDialogAnim">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="SoguDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item><!-- //设置背景 -->
        <item name="android:windowFrame">@null</item><!-- //去掉边框 -->
        <item name="android:backgroundDimEnabled">true</item><!-- //设置是否背景模糊 -->
        <item name="android:windowIsTranslucent">true</item><!-- //设置半透明 -->
        <item name="android:windowNoTitle">true</item><!-- //设置无标题 -->
        <item name="android:windowFullscreen">false</item>
        <!--  <item name="android:backgroundDimEnabled">false</item> -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SoguTextTitle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SoguTextTitle2">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SoguToolbarTitleBlack">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SoguTextEffectDist">
        <item name="android:textSize">@dimen/text_size_samll</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="SoguTextNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="SoguTextSamll">
        <item name="android:alpha">1.0</item>
        <item name="android:textSize">@dimen/text_size_samll</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="TabLayoutTextStyleSmall">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SoguTextMedium">
        <item name="android:alpha">1.0</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="TableTextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableTextValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint"></item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="ItemTextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="ItemTextValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint"></item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="ItemTextValueCus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint"></item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="SoguTextLarge">
        <item name="android:alpha">1.0</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="ItemGridProject">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="ItemGridMain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/bg_item_list</item>
    </style>

    <style name="ItemGridApprove">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:layout_columnWeight" tools:ignore="NewApi">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/bg_item_list</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="fund_small_blue_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_samll</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_fund_tv_small_blue</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="creditEdtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">18dp</item>
        <item name="android:hint">"点击填写"</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="WeeklySelected">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_1</item>
        <!--<item name="android:background">@drawable/weekly_selected</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="WeeklyUnSelected">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">#c7c7c7</item>
        <!--<item name="android:background">@drawable/weekly_unselected</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="calendarTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_samll</item>
        <item name="android:textColor">#c2d3fd</item>
    </style>

    <style name="MyDialogActivity">
        <item name="android:windowBackground">@color/business_card_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ios_bottom_dialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ios_bottom_dialog_anim" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/ios_dialog_enter</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/ios_dialog_exit</item>
        <!-- 退出时的动画 -->
    </style>

    <style name="spinner_anim">
        <item name="android:windowEnterAnimation">@anim/spinner_in</item>
        <item name="android:windowExitAnimation">@anim/spinner_out</item>
    </style>

    <style name="collapse_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="expand_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_25</item>
    </style>
    <!-- 文本 - 滑动标签标题 -->
    <style name="text_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="registerNextStep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_next_step</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="registerTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="addContactTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_28</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="addContactContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">@dimen/text_18</item>
        <item name="android:paddingBottom">@dimen/text_18</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray_a0</item>
        <item name="android:hint">@string/please_edit</item>
        <item name="android:textColor">@color/black_28</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/text_5</item>
        <item name="android:layout_marginLeft">@dimen/text_15</item>
    </style>

    <style name="addTvContactContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">@dimen/text_18</item>
        <item name="android:paddingBottom">@dimen/text_18</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_28</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/text_5</item>
        <item name="android:layout_marginLeft">@dimen/text_15</item>
    </style>
</resources>
