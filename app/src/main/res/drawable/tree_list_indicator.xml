<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#E4E4E4" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>
</layer-list>